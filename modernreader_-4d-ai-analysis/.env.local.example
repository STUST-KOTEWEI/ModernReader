# ===================================
# ModernReader 環境配置範本
# 針對 MacBook Air M3 8GB RAM 優化
# ===================================

# === AI 配置 (必須) ===
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# === 效能設定 (MacBook Air M3 8GB RAM 優化) ===
VITE_MAX_GPU_UTILIZATION=75  # M3 GPU 適中使用
VITE_MAX_CPU_UTILIZATION=70  # M3 CPU 保持流暢
VITE_MAX_RAM_USAGE=5120  # 5GB (為系統保留 3GB)
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_POWER_EFFICIENCY_MODE=true  # 延長電池續航

# === 功能開關 ===
VITE_ENABLE_AR=true
VITE_ENABLE_BLOCKCHAIN=true
VITE_ENABLE_COLLABORATIVE=true
VITE_ENABLE_NEURAL_READING=true
VITE_ENABLE_MULTIMODAL=true
VITE_ENABLE_PREDICTIVE_ANALYTICS=true
VITE_ENABLE_LEARNING_ANALYTICS=true

# === 儲存設定 (本機 256GB + 雲端 2TB) ===
VITE_MAX_LOCAL_STORAGE=53687091200  # 50GB 本機快取
VITE_MAX_CLOUD_STORAGE=2199023255552  # 2TB 雲端
VITE_ENABLE_INDEXEDDB=true
VITE_ENABLE_CLOUD_SYNC=true
VITE_AUTO_OFFLOAD_TO_CLOUD=true
VITE_OFFLOAD_THRESHOLD=80  # 本機使用超過 80% 自動上傳雲端
VITE_COMPRESSION_ENABLED=true  # 啟用壓縮節省空間

# === 雲端同步設定 ===
VITE_CLOUD_PROVIDER=google-drive  # google-drive, dropbox, onedrive
VITE_SYNC_INTERVAL=300000  # 5分鐘同步一次
VITE_OFFLINE_MODE=true  # 支援離線使用

# === 視覺化品質 (M3 GPU 優化) ===
VITE_3D_QUALITY=high  # low, medium, high, ultra
VITE_PARTICLE_EFFECTS=true
VITE_ANIMATION_FPS=60
VITE_ADAPTIVE_QUALITY=true  # 根據效能自動調整

# === 協作設定 ===
VITE_MQTT_BROKER=wss://broker.hivemq.com:8884/mqtt
VITE_ENABLE_REALTIME_SYNC=true

# === 區塊鏈設定 (選用) ===
VITE_BLOCKCHAIN_NETWORK=ethereum-mainnet
VITE_WEB3_PROVIDER=https://mainnet.infura.io/v3/your_project_id

# === 安全設定 ===
VITE_ENABLE_ENCRYPTION=true
VITE_API_RATE_LIMIT=100

# === AI 模型優先順序 ===
# 模型使用順序: 2.5 Pro → 2.5 Flash → 2.0 Pro → 2.0 Flash
VITE_AI_MODEL_PRIORITY=gemini-2.5-pro,gemini-2.5-flash,gemini-2.0-pro,gemini-2.0-flash
VITE_AI_AUTO_FALLBACK=true  # 自動切換到備用模型

# === 功能開關（進階服務） ===
VITE_ENABLE_NLP=true  # 自然語言處理（實體識別、情感分析等）
VITE_ENABLE_RAG=true  # 檢索增強生成（RAG）
VITE_ENABLE_TTS=true  # 文字轉語音（Text-to-Speech）
VITE_ENABLE_STT=true  # 語音轉文字（Speech-to-Text）
VITE_ENABLE_META_SEARCH=true
VITE_ENABLE_METADATA=true
VITE_ENABLE_SQL=true

# === NLP Service 設定 ===
VITE_ENABLE_SQL_QUERY=false  # SQL 查詢功能（開發中）

# === NLP 設定 ===
VITE_NLP_CACHE_SIZE=100  # NLP 結果快取數量
VITE_NLP_MIN_CONFIDENCE=0.5  # 最小信心閾值

# === RAG 設定 ===
VITE_RAG_RETRIEVAL_COUNT=5  # 檢索文檔數量
VITE_RAG_CHUNK_SIZE=500  # 文本分塊大小
VITE_RAG_MIN_RELEVANCE=0.3  # 最小相關度

# === TTS 設定 ===
VITE_TTS_DEFAULT_RATE=1.0  # 語速 (0.5-2.0)
VITE_TTS_DEFAULT_PITCH=1.0  # 音調 (0.0-2.0)
VITE_TTS_DEFAULT_VOLUME=1.0  # 音量 (0.0-1.0)

# === STT 設定 ===
VITE_STT_DEFAULT_LANGUAGE=zh-TW  # 預設識別語言
VITE_STT_CONTINUOUS=false  # 連續識別模式
VITE_STT_INTERIM_RESULTS=true  # 顯示中間結果

# === Meta Search 設定 ===
VITE_META_SEARCH_SOURCES=knowledge_base,google_scholar,wikipedia,web_search
VITE_META_SEARCH_MAX_RESULTS=20  # 最大結果數

# === Metadata Service 設定 ===
VITE_METADATA_CACHE_SIZE=200
VITE_METADATA_AUTO_EXTRACT=true
VITE_METADATA_MIN_WORD_COUNT=10

# === SQL Service 設定 ===
VITE_SQL_CACHE_EXPIRY=300000
VITE_SQL_MAX_QUERY_TIME=10000
VITE_SQL_ENABLE_AI_QUERY=true
VITE_SQL_AUTO_OPTIMIZE=true

# === 開發模式設定 ===
